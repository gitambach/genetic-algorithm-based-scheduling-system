@model SchedulingSystemClassLibrary.ViewModels.CourseOfferingsViewModel

@{
    ViewBag.Title = "Course Offerings";
}

<header>
    <div class="container-fluid">
        <div class="page-header">
            <h3>Course Offerings in your College</h3>
            <h5>Total: @Model.CourseOfferingsCount</h5>
        </div>
    </div>
</header>

<table id="courseofferings" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Section</th>
            <th>Department</th>
            <th>Instructor</th>
            <th>Course</th>
            <th>Year</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>

    </tbody>
</table>


@section scripts 
{
    <script>
        $(document).ready(function () {
            var table = $('#courseofferings').DataTable({
                ajax: {
                    url: "/api/courseofferings",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "section.department.name"
                    },
                    {
                        data: "section.name"
                    },
                    {
                        data: "instructor.firstName"
                    },
                    {
                        data: "course.title"
                    },
                    {
                        data: "year"
                    },
                    {
                        data: "semester"
                    },
                    
                ]
            });
        });
    </script>    
}
